#[Script]
# BiliBili.Global.bangumi.player
^https?:\/\/www\.bilibili\.com\/bangumi\/play\/(ss|ep)\d+(\?.+)?$ url script-echo-response https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js

# BiliBili.Global.season.json
^https?:\/\/api\.bilibili\.com\/pgc\/view\/(v2\/app|web)\/season(\?.+)?$ url script-request-body https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js
# BiliBili.Global.season.json
^https?:\/\/api\.bilibili\.com\/pgc\/view\/(v2\/app|web)\/season(\?.+)?$ url script-response-body https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.response.js

# BiliBili.Global.playurl.grpc
^https?:\/\/(grpc\.biliapi\.net|app\.bilibili\.com)\/bilibili\.pgc\.gateway\.player\.v2\.PlayURL\/PlayView(\?.+)?$ url script-request-body https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js
# BiliBili.Global.playurl.json
^https?:\/\/api\.bilibili\.com\/pgc\/player\/(api|web)\/playurl(\/html5)?(\?.+)?$ url script-echo-response https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js
# BiliIntl.Global.playurl.json
^https?:\/\/api\.global\.bilibili\.com\/intl\/gateway\/v2\/ogv\/playurl(\?.+)?$ url script-request-header https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js

# BiliBili.Global.space.json
^https?:\/\/app\.bilibili\.com\/x\/v2\/space(\?.+)?$ url script-request-header https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js
# BiliBili.Global.space.json
^https?:\/\/api\.bilibili\.com\/x\/space\/wbi/acc\/info(\?.+)?$ url script-request-header https://raw.githubusercontent.com/VirgilClyne/BiliBili/main/js/BiliBili.Global.request.js

#[MITM]
hostname = www.bilibili.com, grpc.biliapi.net, api.bilibili.com, api.global.bilibili.com, app.bilibili.com
